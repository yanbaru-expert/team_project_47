<h2 class = "text-center">Ruby/Rails テキスト教材</h2>
  <div class = "seach">
    <%= search_form_for @q do |f| %>
      <div class="d-flex justify-content-center mb-3" style="width: 300px;">
        <%= f.search_field :title_cont, class:"form-control col-xs-4", placeholder:"教材を探す" %>
        <%= f.submit "検索", class:"ml-2"%> 
      </div>
    <% end %>
  </div>

  <div class = "row">
    <% @texts.each do |text, id| %>
      <div class= "col-12 col-md-6 col-lg-4 text-card">
        <%= link_to "/texts/#{text.id}" do %>
          <div class="card card-contens border-dark" >
            <div class = "card-header ">
              <img class="card-img-top" src="https://d5izmuz0mcjzz.cloudfront.net/texts/no_image.jpg">
            </div>
            <div class="card-body">
              <p class="card-text"><%= text.title %></p>
              <p id="text-<%= text.id %>">
              <% if text.read_by?(current_user) %>
                <%= render "read", text: text.id %>
              <% else %>
                <%= render "not_read", text: text.id %>
              <% end %>
              <p>【<%= text.genre %>】</p>
            </div>
          </div>
        <% end %>
      </div>
    <% end %>
  </div>
